function mensaje_error {
  clear
  echo "${RED}Error el valor debe estar entre 1 - $1"
  sleep 2
  clear
}

function cancelar_operacion {
  if [ $1 == "salir" ]; then
    echo "Operacion Cancelada...."
    sleep 2
    clear
    break
  fi
}

function mensaje_despedida {
  clear
  nombre="$(whoami)"
  echo "Gracias  \033[05;44;33m$nombre\033[0m por su visita"
  sleep 2
  exit
  chmod a+w p_*
  clear
}

function menu_principal {
  clear
  while true
  do
    echo "${RED} MENU PRINCIPAL ${LIGHTGRAY}"
    echo "1. COMANDOS GENERALES"
    echo "2. USUARIOS"
    echo "3. SISTEMA DE ARCHIVOS"
    echo "4. TERMINAR"
    echo "${YELLOW}Seleccione la opci√≥n deseada. Luego Presione Enter ${CYAN}"
    read opcion
    case $opcion in
      1) menu_comandos_generales;;
      2) menu_usuarios;;
      3) menu_sistema_de_archivos;;
      4) mensaje_despedida;;
      *) mensaje_error 4;;
    esac
  done
}
